<%= notice if notice.present? %>

  <form>
    <%= form_for @categoria do |f| %>
      <div class="form-group">
        <label for="exampleInputEmail1"><%= f.label :id %></label>
        <input type="email" class="form-control" <%= f.text_field :id, value: @categoria.id, disabled: true %>
      </div>
      <div class="form-group">
        <label><%= f.label :descricao %></label>
        <input type="text" class="form-control" <%= f.text_field :descricao, value: @categoria.descricao, disabled: true %>
      </div>
    <%= link_to 'Voltar', categorias_path, class: "btn btn-primary" %>
    <% end %>
  </form>
