<%= form_tag({controller: 'index', action: 'busca_principal'}, remote: true) do %>
  <div class="row" id="teste" style="padding-left: 50px; padding-bottom: 50px" >
    <div class="form-group" style="padding-left: 50px;">
      <label>Digite sua pesquisa</label>
      <%= search_field_tag('descricao', nil , class: 'form-control') %>
    </div>

    <div class="form-group" style="padding-left: 50px;">
      <label style="padding-bottom: 5px">Categoria</label><br>
      <%= collection_select(:busca, :categoria_id, Categoria.all, :id, :descricao, include_blank: "Todas" ) %>
    </div>

    <div class="form-group" style="padding-left: 50px;">
      <label style="padding-bottom: 5px">Ordenação</label><br>
      <%= select(:busca, :ordenacao_consulta, options_for_select(Produto::ORDENACAO.invert)) %>
    </div>

    <div class="form-group" style="padding-left: 50px; padding-top: 25px;">

      <%= submit_tag "Buscar", class: "btn btn-info", remote: true %>
    </div>
  </div>
<% end %>

<div id="tabela_produtos">
  <%= render partial: "tabelas_produtos", locals: { busca_principal: @produtos }%>
</div>


