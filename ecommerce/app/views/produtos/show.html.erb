<%= notice if notice.present? %>

<form>
  <%= form_for @produto do |f| %>
    <div class="form-group">
    <%= image_tag @produto.imagem_produto, size: "300x300", crop: :fill %>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1"><%= f.label :id %></label>
      <input type="email" class="form-control" <%= f.text_field :id, value: @produto.id, disabled: true %>
    </div>
    <div class="form-group">
      <label><%= f.label :descricao %></label>
      <input type="text" class="form-control" <%= f.text_field :descricao, value: @produto.descricao, disabled: true %>
    </div>
    <div class="form-group">
      <label><%= f.label :categoria %></label>
      <input type="text" class="form-control" <%= f.text_field :descricao, value: @produto.categoria.descricao, disabled: true %>
    </div>
    <div class="form-group">
      <label><%= f.label :estoque %></label>
      <input type="text" class="form-control" <%= f.text_field :descricao, value: @produto.estoque, disabled: true %>
    </div>
    <div class="form-group">
      <label><%= f.label :valor %></label>
      <input type="text" class="form-control" <%= f.text_field :descricao, value: @produto.valor, disabled: true %>
    </div>
    <div class="form-group">
      <label><%= f.label :numero_parcelas %></label>
      <input type="text" class="form-control" <%= f.text_field :descricao, value: @produto.numero_parcelas, disabled: true %>
    </div>
    <div class="form-group">
      <label><%= f.label :ativo %></label>
      <input type="text" class="form-control" <%= f.text_field :descricao, value: @produto.ativo, disabled: true %>
    </div>
    <div class="form-group">
      <label><%= f.label :promocao %></label>
      <input type="text" class="form-control" <%= f.text_field :descricao, value: @produto.promocao, disabled: true %>
    </div>
    <div class="form-group">
      <label><%= f.label :valor_promocao %></label>
      <input type="text" class="form-control" <%= f.text_field :descricao, value: @produto.valor_promocao, disabled: true %>
    </div>

    <%= link_to 'Voltar', produtos_path, class: "btn btn-primary" %>
  <% end %>
</form>
